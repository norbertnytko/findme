<div class="container mx-auto p-4">
  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div class="col-span-1 bg-gray-50 shadow-md rounded-lg p-6">
      <%= render 'form', one_pager: @one_pager %>
      <div class="mt-4">
        <%= link_to "Add a Link", fields_one_pager_links_path(@one_pager), data: { turbo_stream: true }, class: "btn btn-primary" %>
      </div>
      <div id="links" data-controller="sortable-links" data-sortable-links-resource-name-value="link" class="mt-4">
        <%= render(partial: 'links/link', collection: @one_pager.links.order(position: :asc), as: :link, locals: { one_pager: @one_pager }) %>
      </div>
      <div class="mt-4">
        <%= render 'theme_form', one_pager: @one_pager %>
      </div>
    </div>
    <div class="hidden md:block col-span-1">
      <div class="sticky top-0 h-screen flex items-center justify-center">
        <%= render "preview", one_pager: @one_pager %>
      </div>
    </div>
  </div>
</div>
