<%= form_for(
  one_pager,
  as: :one_pager,
  url: one_pager.persisted? ? one_pager_path(one_pager.slug) : one_pagers_path,
  class: "p-10 card bg-base-200") do |form| %>

  <div class="form-control">
    <%= form.label :name do %>
      <span class="label-text">Name</span>
    <% end %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <%= form.hidden_field :theme, value: one_pager.theme %>

  <% if one_pager.new_record? %>
    <div class="form-control">
      <%= form.label :slug do %>
        <span class="label-text">Slug</span>
      <% end %>
      <%= form.text_field :slug, class: "input" %>
    </div>
  <% end %>

  <div class="divider"></div> 
  <%= form.submit class: "btn" %>
<% end %>
