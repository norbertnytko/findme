<div data-sortable-update-url="<%= one_pager_link_path(one_pager, link) %>">
  <%= turbo_frame_tag dom_id(link) do %>
    <div class="bg-gray-100 shadow-lg rounded-lg p-4 my-4">
      <div class="mb-4">
        <h2 class="text-2xl font-bold text-gray-900">Displayed name: <%= link.name %></h2>
        <p class="mt-2 text-gray-600">URL: <%= link.url %></p>
      </div>
    
      <div class="flex justify-between">
        <%= link_to "Edit", edit_one_pager_link_path(one_pager, link), class: "btn btn-primary", data: { turbo_stream: true } %>
        <%= button_to "Delete", one_pager_link_path(one_pager, link), method: :delete, class: "btn btn-error", data: { turbo_stream: true } %>
      </div>
    </div>
  <% end %>
</div>
