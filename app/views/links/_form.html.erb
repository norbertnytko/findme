
<%= turbo_frame_tag(nested_dom_id(@one_pager, link)) do %>
  <%= form_with(
    model: [one_pager, link],
    class: "p-10 card bg-base-200") do |form| %>

    <div class="form-control">
      <%= form.label :name do %>
        <span class="label-text">Displayed name</span>
      <% end %>
      <%= form.text_field :name, class: "input" %>
    </div>

    <div class="form-control">
      <%= form.label :url do %>
        <span class="label-text">Url</span>
      <% end %>

      <label class="input-group">
        <span>https://</span> 
        <%= form.text_field :url, class: "input" %>
      </label>
    </div>
    
    <div class="divider"></div> 
    <%= form.submit class: "btn" %>

    <div class="divider"></div>


  <% end %>

<% end %>
